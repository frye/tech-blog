<div class="post">
  <h2>{{title}}</h2>
  <h3>By: {{user.username}} at {{format_date createdAt}}</h3>
  <p>{{post.content}}</p>
  <form method="POST" action="/api/comments">
    <div>
      <div class="form-group">
        <label for="post_id" hidden>Post id</label>
        <input type="text" id="post_id" name="post_id" value="{{id}}" readonly hidden></input>
      </div>
      <div class="form-group">
        <label for="comment_user" hidden>User</label>
        <input type="text" id="comment_user" name="comment_user" value="{{logged_in_name}}" readonly hidden></input>
      </div>
      <div class="form-group">
        <label for="content">Comment</label>
        <textarea class="form-control" id="content" name="content" rows="3"></textarea>
      </div>
      <button type="submit" class="btn btn-dark mx-3 mb-3">Comment</button>
    </div>
  </form>
</div>
{{#each comments as |comment|}}
<div class="comment">
  <h3>{{comment.user}}</h3>
  <p>{{comment.content}}</p>
</div>
{{/each}}