  <div class="m-4">
    <div class="col p-4 d-flex flex-column position-static border rounded shadow-sm">
      <h3 class="mb-0">{{title}}</h3>
      <div class="mb-1 text-muted">By: {{user.username}} at {{format_date createdAt}} : {{format_date_time createdAt}}UTC</div>
      <p class="card-text mb-auto">{{content}}</p>
    </div>
  </div>
  {{#if is_logged_in}}
  <form method="POST" action="/api/comments">
    <div class="m-4">
      <div class="form-group">
        <label for="post_id" hidden>Post id</label>
        <input type="text" id="post_id" name="post_id" value="{{id}}" readonly hidden></input>
      </div>
      <div class="form-group">
        <label for="comment_user" hidden>User</label>
        <input type="text" id="comment_user" name="comment_user" value="{{logged_in_name}}" readonly hidden></input>
      </div>
      <div class="form-group">
        <label for="content">Comment</label>
        <textarea class="form-control" id="content" name="content" rows="3"></textarea>
      </div>
      <button type="submit" class="btn btn-dark mx-3 m-3">Comment</button>
    </div>
  </form>
</div>
{{/if}}
<h4 class="m-4">Comments:</h4>
{{#each comments as |comment|}}
<div class="comment border m-4 p-2 shadow-sm">
  <h6 class="text-muted">By: {{comment.comment_user}} at {{format_date createdAt}} : {{format_date_time createdAt}}UTC</h6>
  <p>{{comment.content}}</p>
</div>
{{/each}}